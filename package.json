{
	"name": "grail-pro-charms",
	"version": "1.0.1",
	"description": "This is a [Charms](https://charms.dev) app.",
	"main": "dist/src/index.js",
	"scripts": {
		"prettier-fix": "prettier --write \"**/*.ts\"",
		"build": "npm run build-zkapp && npm run build-ts",
		"build-ts": "tsc --project . --outDir ./dist --declaration --pretty",
		"build-zkapp": "cd ./zkapp && ./build.sh",
		"prepare": "npm run build",
		"clean-js": "find ./src -type f -name \"*.js\" -delete",
		"test": "jest --detectOpenHandles --testPathIgnorePatterns=e2e --testPathIgnorePatterns=cli",
		"test:cli": "jest --detectOpenHandles --runInBand tests/cli/",
		"test:cli:deploy": "jest --detectOpenHandles --runInBand tests/cli/deploy.test.ts",
		"test:cli:update": "jest --detectOpenHandles --runInBand tests/cli/update.test.ts",
		"test:cli:simple": "jest --detectOpenHandles --runInBand tests/cli/simple.test.ts",
		"test:e2e": "jest --detectOpenHandles --runInBand tests/e2e/",
		"lint": "eslint --ignore-pattern node_modules/ --ignore-pattern dist/ --ignore-pattern python/ .",
		"lint-fix": "npm run lint -- --fix"
	},
	"devDependencies": {
		"@jest/globals": "29.7.0",
		"@types/bitcoinjs-lib": "4.0.1",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.3",
		"@types/jest": "29.5.14",
		"@types/js-yaml": "4.0.9",
		"@types/minimist": "1.2.5",
		"@types/node": "20.16.10",
		"jest": "29.7.0",
		"prettier": "3.6.2",
		"ts-jest": "29.2.6",
		"ts-node": "10.9.2"
	},
	"dependencies": {
		"@bitcoinerlab/secp256k1": "1.2.0",
		"@noble/curves": "1.9.2",
		"@scure/btc-signer": "1.8.1",
		"@types/mustache": "4.2.6",
		"bech32": "2.0.0",
		"bitcoin-core": "5.0.0",
		"bitcoinjs-lib": "6.1.7",
		"cors": "2.8.5",
		"dotenv": "16.4.7",
		"eslint": "9.32.0",
		"eslint-plugin-unused-imports": "4.1.4",
		"express": "5.1.0",
		"js-yaml": "4.1.0",
		"minimist": "1.2.8",
		"mustache": "4.2.0",
		"tiny-secp256k1": "2.2.3",
		"typescript-eslint": "8.39.0",
		"zod": "4.0.16"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitsnark/grail-pro-charms.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/bitsnark/grail-pro-charms/issues"
	},
	"homepage": "https://github.com/bitsnark/grail-pro-charms#readme"
}
